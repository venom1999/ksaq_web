  <select id="getResourceList" resultType="java.util.Map">
SELECT e.edu_resource_id as resId,
  e.resource_credit as totalCredit,
  e.resource_name as title,
  isnull(f.grad,0) as getCredit,
  h.categoryName
FROM education_resource_t e
LEFT JOIN
(SELECT a.edu_resource_id,SUM(a.content_credit) as grad
FROM resource_content_t a, 
(
SELECT c.upload_file_name,c.online_edu_res_id
	FROM online_edu_time_t c,resource_content_t d
	WHERE c.total_time >= d.min_learning_time
	AND c.upload_file_name = d.upload_file_name
    AND c.online_edu_res_id = d.edu_resource_id
	and c.employee_num = #{userID}
) b<!--b:登录人学完的文件-->
WHERE a.upload_file_name = b.upload_file_name
    and a.edu_resource_id = b.online_edu_res_id
GROUP BY a.edu_resource_id) f<!--f：登录人获得学分的资源-->
ON e.edu_resource_id = f.edu_resource_id
LEFT JOIN
(
	SELECT edu_category_name as categoryName,edu_category_id
	FROM education_category_t
) h
ON e.resource_category = h.edu_category_id
where e.is_released = 0 or e.upload_person = #{userID}
ORDER BY e.edu_resource_id desc

